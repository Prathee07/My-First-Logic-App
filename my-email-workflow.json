        }
    },
    "parameters": {
        "$connections": {
            "type": "Object",
            "value": {
                "gmail": {
                    "id": "/subscriptions/YOUR_SUBSCRIPTION_ID_HERE/providers/Microsoft.Web/locations/northcentralus/managedApis/gmail",
                    "connectionId": "/subscriptions/YOUR_SUBSCRIPTION_ID_HERE/resourceGroups/YOUR_RESOURCE_GROUP_NAME/providers/Microsoft.Web/connections/gmail",
